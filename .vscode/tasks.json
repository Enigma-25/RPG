{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run C++ File",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${fileBasenameNoExtension}.cpp",
        "-o",
        "${fileBasenameNoExtension}.out",
        "&&",
        "./${fileBasenameNoExtension}.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiling and running ${fileBasenameNoExtension}.cpp with g++"
    }
  ]
}